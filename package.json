{
  "name": "eventlog-server",
  "version": "1.0.0",
  "description": "An eventlog server",
  "main": "lib/index.js",
  "license": "MIT",
  "dependencies": {
    "chalk": "2.4.2",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "log4js": "^6.9.1",
    "md5": "^2.3.0",
    "mellon-server": "^1.1.2",
    "postgres": "^3.4.4",
    "url": "^0.11.4"
  },
  "bin": {
    "event_admin": "./bin/event_admin.js"
  },
  "scripts": {
    "server": "npx mellon-server --registry config/registry.json5",
